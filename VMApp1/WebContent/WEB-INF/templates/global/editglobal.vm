<HTML>
<head>
#include( "/bootstrap/head.html" )
<TITLE>$application</TITLE>
</head>
<body>
#parse( "/bootstrap/header.vm" )
<div class="container">
		<div class="row">
			<div class="col-lg-22">
				#if($showAlert)
					#if($showAlert == "true")
						#parse( "/bootstrap/alert.vm" )
					#end
				#end
				<div class="panel panel-default">
					<div class="panel-heading">Global Journal Settings</div>
					<div class="panel-body">
						<div class="col-lg-12">
							<form method="POST" action="UpdateGlobal">
								<label>Name</label><br />
								<input type="text" name="name" value="$global.getName()" /><br />
								<label>Goals</label><br />
								<textarea name="goals">$global.getGoals()</textarea><br />
								<label>Submission Guidelines</label><br />
								<textarea name="submission_guidelines">$global.getSubmission_guidelines()</textarea><br />
								<input type="hidden" value="$global.getId()" name="id" />
								<input type="submit" value="Update Global Settings" /><br />
							</form>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
#include( "/bootstrap/footer.html" )
</div>
</body>
</html>