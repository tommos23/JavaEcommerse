<HTML>
<head>
#include( "/bootstrap/head.html" )
<TITLE>$application</TITLE>
</head>
<body>
#parse( "/bootstrap/header.vm" )
<div class="container">
		<div class="row">
			<div class="col-lg-22">
					#if($showAlert == "true")
						#parse( "/bootstrap/alert.vm" )
					#end	
				<div class="panel panel-default">
					<div class="panel-heading">Register</div>
					<div class="panel-body">
						<div class="col-lg-3"></div>
						<div class="col-lg-6">					
						<form name="signupform" id="signupform" action="register" method="post">
						<input class="form-control" type="text" name="ufname" placeholder="First Name" #if($fname) value=$fname #end required/><br>
						<input class="form-control" type="text" name="ulname" placeholder="Last Name" #if($lname) value= $lname #end required/><br>
						<input class="form-control" type="text" name="uemail" placeholder="E-mail"  #if($email) value=$email #end required/><br>
						<input class="form-control" type="password" name="upsw" placeholder="Password" required/><br>
						<input class="form-control" type="password" name="cnf-upsw" placeholder="Re-Enter Password" required/><br>
						<input class="btn btn-success submit-btn" type="submit" value="Submit">
						<input class="btn btn-warning" type="reset">
						</form>
						</div>
						<div class="col-lg-3"></div>
					</div>
				</div>						
			</div>
		</div>
	</div>
#include( "/bootstrap/footer.html" )
</div>
</body>
</html>