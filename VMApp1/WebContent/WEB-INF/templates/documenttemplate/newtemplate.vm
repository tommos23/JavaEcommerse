<HTML>
<head>
#include( "/bootstrap/head.html" )
<TITLE>$application</TITLE>
</head>
<body>
#parse( "/bootstrap/header.vm" )
<div class="container">
		<div class="row">
			<div class="col-lg-22">
				#if($showAlert)
					#if($showAlert == "true")
						#parse( "/bootstrap/alert.vm" )
					#end
				#end
				<div class="panel panel-default">
					<div class="panel-heading">New Template</div>
					<div class="panel-body">
						<div class="col-lg-12">
							<form method="POST" action="CreateDocumentTemplate">
								<label>Name</label><br />
								<input type="text" name="name" class="form-control"/><br />
								<label>Description</label><br />
								<input type="text" name="description" class="form-control"/><br />
								<label>Format</label><br />
								<input type="text" maxlength="5" name="format" class="form-control"/><br />
								<label>URL</label><br />
								<input type="text" name="url" class="form-control"/><br />
								<input type="submit" value="Create" class="btn btn-primary"/><br />
							</form>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
#include( "/bootstrap/footer.html" )
</div>
</body>
</html>